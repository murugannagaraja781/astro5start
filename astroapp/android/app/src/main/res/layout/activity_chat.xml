<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B1A2D">

    <!-- Premium Header -->
    <RelativeLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1F4E79"
        android:elevation="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toStartOf="@id/btnEditIntake">

            <TextView
                android:id="@+id/tvChatTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consultation"
                android:textColor="@color/brand_gold"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:ellipsize="end"
                android:maxLines="1"/>

             <!-- Typing status removed from here -->
        </LinearLayout>

        <Button
            android:id="@+id/btnEndChat"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="End"
            android:textSize="12sp"
            android:background="@drawable/bg_button_secondary"
            android:textColor="@color/text_primary"
            android:minHeight="36dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:backgroundTint="@null"
            xmlns:app="http://schemas.android.com/apk/res-auto"/>

        <TextView
            android:id="@+id/tvSessionTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/btnEndChat"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="00:00"
            android:textColor="@color/text_white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btnEditIntake"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_toStartOf="@id/tvSessionTimer"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_edit"
            android:tint="@color/brand_gold"
            android:contentDescription="Edit Details"
            android:scaleType="centerInside"/>

    </RelativeLayout>

    <!-- Typing Indicator Bubble - Floating above Input -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvTypingBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/layoutInput"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#2C3E50"
        app:cardElevation="2dp"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <ProgressBar
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/brand_gold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Typing..."
                android:textColor="#B0B0B0"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:textStyle="italic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/layoutInput"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!-- Premium Input Area -->
    <LinearLayout
        android:id="@+id/layoutInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="#1F4E79"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnChart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_chart"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_marginEnd="8dp"
            android:contentDescription="View Chart"
            android:visibility="gone"
            android:tint="@color/text_secondary"/>

        <ImageButton
            android:id="@+id/btnMatch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_match"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:contentDescription="View Match"
            android:tint="@color/text_secondary"/>

        <EditText
            android:id="@+id/inputMessage"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Type your message..."
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/bg_input_rounded"
            android:textColor="#F2F4FF"
            android:textColorHint="#B0B0B0"
            android:textSize="16sp"/>

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_check"
            android:background="@drawable/bg_button_primary"
            android:tint="@color/brand_gold"
            android:layout_marginStart="12dp"
            android:contentDescription="Send"
            android:padding="12dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>
</RelativeLayout>
