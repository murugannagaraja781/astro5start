<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Birth Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2C2C2C"
            android:paddingBottom="12dp"/>

        <!-- Name (Read-only) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            android:paddingTop="8dp"/>

        <EditText
            android:id="@+id/etClientName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColor="#2C2C2C"
            android:textSize="14sp"/>

        <!-- Date of Birth -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            android:paddingTop="16dp"/>

        <Button
            android:id="@+id/btnSelectDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:backgroundTint="#C9A24D"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvSelectedDOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not selected"
            android:textSize="14sp"
            android:textColor="#2C2C2C"
            android:padding="8dp"/>

        <!-- Time of Birth -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time of Birth"
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            android:paddingTop="16dp"/>

        <Button
            android:id="@+id/btnSelectTOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:backgroundTint="#C9A24D"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tvSelectedTOB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not selected"
            android:textSize="14sp"
            android:textColor="#2C2C2C"
            android:padding="8dp"/>

        <!-- Place of Birth -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place of Birth"
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            android:paddingTop="16dp"/>

        <EditText
            android:id="@+id/etPlaceOfBirth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chennai, India"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:textColor="#2C2C2C"
            android:textSize="14sp"
            android:inputType="text"/>

        <!-- Consultation Reason -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultation Reason"
            android:textSize="12sp"
            android:textColor="#6B6B6B"
            android:paddingTop="16dp"/>

        <EditText
            android:id="@+id/etConsultationReason"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="What would you like to discuss?"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:gravity="top"
            android:textColor="#2C2C2C"
            android:textSize="14sp"
            android:inputType="textMultiLine"/>

    </LinearLayout>
</ScrollView>
