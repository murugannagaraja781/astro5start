<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brand_bg_soft"
    android:gravity="center"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_premium"
        android:orientation="vertical"
        android:padding="32dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/brand_true_red"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/verificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter code sent to your phone"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/otpInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="0 0 0 0"
            android:gravity="center"
            android:letterSpacing="0.2"
            android:background="@drawable/bg_input_rounded"
            android:inputType="number"
            android:maxLength="4"
            android:textSize="20sp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnVerifyOtp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Verify &amp; Login"
            android:background="@drawable/bg_button_primary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>
