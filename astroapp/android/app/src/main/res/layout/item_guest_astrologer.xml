<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Avatar with Status -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/imgAstrologer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_person"
                    android:background="@drawable/circle_bg"
                    android:backgroundTint="#F5E6D3"
                    android:padding="12dp"
                    android:tint="#C9A227"
                    android:scaleType="centerCrop"/>

                <!-- Online Dot -->
                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/bg_status_online"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="14dp">

                <!-- Name with Online Indicator -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Astrologer Name"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="6dp"
                        android:background="@drawable/circle_bg"
                        android:backgroundTint="#4CAF50"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedic, Numerology"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Rating Stars -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★ 4.8"
                        android:textColor="#C9A227"
                        android:textSize="13sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="★★★★★"
                        android:textColor="#FFD700"
                        android:textSize="11sp"
                        android:layout_marginStart="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Price Badge -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹15/min"
                android:textColor="#C9A227"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/btnCall"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Call ₹20/min"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/btn_outline_gold"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Chat ₹15/min"
                android:gravity="center"
                android:textColor="#333333"
                android:textSize="13sp"
                android:textStyle="bold"
                android:background="@drawable/btn_outline_gold"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
