<?xml version="1.0" encoding="utf-8"?>
<!-- Rasi Item for Guest Dashboard - Light Theme -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="6dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <!-- Rasi Icon with Gold Border -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/imgRasi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_rasi_aries_premium"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_bg"
            android:backgroundTint="#1A1E28"/>

        <!-- Gold Ring Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_ring_gold"/>
    </FrameLayout>

    <!-- Rasi Name in Tamil -->
    <TextView
        android:id="@+id/tvRasiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="மேஷம்"
        android:textSize="11sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:ellipsize="end"/>

</LinearLayout>
