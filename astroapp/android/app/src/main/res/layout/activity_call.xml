<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:keepScreenOn="true">

    <!-- Split Screen Video Container (Visible for Video Calls) -->
    <LinearLayout
        android:id="@+id/videoSplitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"
        android:background="@color/white">

        <!-- Top Half: Remote Video -->
        <androidx.cardview.widget.CardView
            android:id="@+id/remoteVideoCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_100"
            app:cardElevation="0dp">

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/remote_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Remote Name & Timer Overlay (Top Left/Right) -->
             <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="16dp">

                 <TextView
                     android:id="@+id/tvRemoteName"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="Partner Name"
                     android:textColor="#FFFFFF"
                     android:textStyle="bold"
                     android:shadowColor="#000000"
                     android:shadowRadius="4"/>

                  <!-- Timer Pill -->
                 <TextView
                     android:id="@+id/tvCallDuration"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_alignParentEnd="true"
                     android:background="@drawable/bg_pill_semi_transparent"
                     android:backgroundTint="#80000000"
                     android:paddingHorizontal="12dp"
                     android:paddingVertical="4dp"
                     android:text="00:00"
                     android:textColor="#FFFFFF"
                     android:textSize="12sp"
                     android:gravity="center"
                     />
             </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Bottom Half: Local Video -->
        <androidx.cardview.widget.CardView
            android:id="@+id/localVideoCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="12dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/purple_100"
            app:cardElevation="0dp">

            <org.webrtc.SurfaceViewRenderer
                android:id="@+id/local_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Bottom Control Panel -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="48dp">

        <!-- Mic Toggle -->
        <ImageButton
            android:id="@+id/btnMic"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_rounded_action"
            android:src="@android:drawable/ic_btn_speak_now"
            android:tint="#FFFFFF"
            android:contentDescription="Toggle Mic" />

        <Space android:layout_width="24dp" android:layout_height="wrap_content" />

        <!-- Chat Toggle (Optional) -->
         <ImageButton
            android:id="@+id/btnChat"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_rounded_action"
            android:src="@android:drawable/ic_menu_send"
            android:tint="#FFFFFF"
            android:contentDescription="Chat" />

        <Space android:layout_width="24dp" android:layout_height="wrap_content" />

        <!-- Chart Button (Astrologer Only) -->
        <ImageButton
            android:id="@+id/btnChart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_rounded_action"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:tint="#FFFFFF"
            android:contentDescription="Rasi Chart"
            android:visibility="gone"/>

        <Space android:layout_width="24dp" android:layout_height="wrap_content" />

        <!-- Video Toggle -->
        <ImageButton
            android:id="@+id/btnVideo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_rounded_action"
            android:src="@android:drawable/ic_menu_camera"
            android:tint="#FFFFFF"
            android:contentDescription="Toggle Video" />

        <Space android:layout_width="24dp" android:layout_height="wrap_content" />

        <!-- Edit Form Button (Client Only) -->
        <ImageButton
            android:id="@+id/btnEditForm"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_rounded_action"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#FFFFFF"
            android:contentDescription="Edit Details"
            android:visibility="gone"/>

        <Space android:layout_width="24dp" android:layout_height="wrap_content" />

        <!-- End Call -->
        <ImageButton
            android:id="@+id/btnEndCall"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/btn_rounded_action_red"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF"
            android:contentDescription="End Call" />

    </LinearLayout>

    <!-- Status Text (Connecting...) -->
    <TextView
        android:id="@+id/tvCallStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Connecting..."
        android:textColor="@color/text_primary"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Audio Call Specific UI (Hidden by default, shown for Audio Calls) -->
    <RelativeLayout
        android:id="@+id/audioLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="gone">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/ivAudioAvatar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_person_placeholder"
            android:background="@drawable/bg_circle_white"
            android:backgroundTint="#374151"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:contentDescription="Avatar" />

        <!-- Name & Status -->
        <TextView
            android:id="@+id/tvAudioName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivAudioAvatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Partner Name"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvAudioStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAudioName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Connected"
            android:textColor="#10B981"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvAudioTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAudioStatus"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="00:00"
            android:textColor="#E5E7EB"
            android:textSize="14sp" />

        <!-- Controls: Mic, Speaker & Chart (Side by Side) -->
        <LinearLayout
            android:id="@+id/audioControlsRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnAudioEndCall"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnAudioMic"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_circle_white"
                android:src="@android:drawable/ic_btn_speak_now"
                android:padding="16dp"
                android:contentDescription="Mic" />

            <Space android:layout_width="32dp" android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/btnAudioSpeaker"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_circle_white"
                android:backgroundTint="#E5E7EB"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:padding="16dp"
                android:contentDescription="Speaker" />

            <Space android:layout_width="32dp" android:layout_height="wrap_content" />

            <!-- Chart Button (Astrologer Only) -->
            <ImageButton
                android:id="@+id/btnAudioChart"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_circle_white"
                android:backgroundTint="#B8860B"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:padding="16dp"
                android:contentDescription="Rasi Chart"
                android:visibility="gone" />

        </LinearLayout>

        <!-- End Call (Bottom Pill) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAudioEndCall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="32dp"
            android:background="@drawable/btn_pill_red"
            android:text="End Call"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>
