<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    style="@style/CardStyle"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Top Row: Image + Info + Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Profile Image -->
            <FrameLayout
                android:layout_width="65dp"
                android:layout_height="65dp">

                <ImageView
                    android:id="@+id/imgAstrologer"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_person_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_bg"/>

                <!-- Online Status Indicator -->
                <View
                    android:id="@+id/statusIndicator"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/status_offline"/>
            </FrameLayout>

            <!-- Info Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <!-- Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Astrologer Name"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"/>

                    <!-- Verified Badge -->
                    <TextView
                        android:id="@+id/tvVerified"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="✓"
                        android:textSize="14sp"
                        android:textColor="@color/secondary"
                        android:layout_marginStart="4dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Skills -->
                <TextView
                    android:id="@+id/tvSkills"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vedic, Prashna"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Experience & Price -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/tvExperience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 5 yrs"
                        android:textSize="12sp"
                        android:textColor="#F59E0B"/> <!-- Gold for star can stay or use accent -->

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="₹15/min"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <!-- Chat Button -->
            <Button
                android:id="@+id/btnChat"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Chat"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/primary"
                app:strokeColor="@color/primary"
                app:cornerRadius="20dp"
                android:layout_marginEnd="6dp"/>

            <!-- Audio Call Button -->
            <Button
                android:id="@+id/btnAudio"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Audio"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/primary"
                app:strokeColor="@color/primary"
                app:cornerRadius="20dp"
                android:layout_marginHorizontal="6dp"/>

            <!-- Video Call Button -->
            <Button
                android:id="@+id/btnVideo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Video"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/error"
                app:strokeColor="@color/error"
                app:cornerRadius="20dp"
                android:layout_marginStart="6dp"/>
                 <!-- Warning Color for Video? Or just Orange. Let's keep Orange if it fits -->
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
