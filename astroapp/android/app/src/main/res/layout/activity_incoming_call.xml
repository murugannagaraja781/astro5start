<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".IncomingCallActivity">

    <!-- Top Status Bar Area (Optional) -->
    <TextView
        android:id="@+id/tvIncomingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Incoming call"
        android:textColor="@color/text_secondary"
        android:textSize="16sp" />

    <!-- Center Avatar Area -->
    <LinearLayout
        android:id="@+id/layoutAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Avatar Container with Shadow/Glow effect simulated by background -->
        <FrameLayout
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:background="@drawable/circle_bg"
            android:backgroundTint="@color/surface"
            android:padding="20dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_placeholder"
                android:scaleType="centerCrop" />
        </FrameLayout>

        <Space android:layout_width="match_parent" android:layout_height="24dp" />

        <TextView
            android:id="@+id/callerNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astrologer Name"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/callerIdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Calling..."
            android:textColor="@color/text_secondary"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Decline Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/rejectButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_rounded_action_red"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                android:tint="#FFFFFF"
                android:contentDescription="Decline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <Space android:layout_width="40dp" android:layout_height="wrap_content" />

        <!-- Accept Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/acceptButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_rounded_action_green"
                android:src="@android:drawable/ic_menu_call"
                android:tint="#FFFFFF"
                android:contentDescription="Accept" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:layout_marginTop="8dp"/>
        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
