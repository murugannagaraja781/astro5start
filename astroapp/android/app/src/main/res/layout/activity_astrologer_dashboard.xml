<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_primary">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bg_gradient_header"
        android:padding="16dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Astrologer Console"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/brand_gold"/>

        <ImageButton
            android:id="@+id/btnLogout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_lock_power_off"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/brand_gold"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Profile Summary -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/bg_card_premium_dark">

                    <TextView
                        android:id="@+id/tvAstroName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Astrologer Name"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_on_card"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wallet Earnings"
                        android:textSize="14sp"
                        android:textColor="@color/text_on_card"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/tvEarnings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹0.00"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/brand_status_online"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Status Control -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_card_premium_dark">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Online Status"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_on_card"/>

                        <TextView
                            android:id="@+id/tvStatusLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="You are currently Offline"
                            android:textSize="14sp"
                            android:textColor="@color/text_on_card"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchOnline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Earnings Action -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnWithdraw"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Request Withdrawal"
                android:layout_marginBottom="24dp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="textStart"
                app:backgroundTint="@color/brand_true_red"
                android:textColor="@android:color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recent History"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:id="@+id/tvEmptyHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No recent sessions"
                android:gravity="center"
                android:padding="32dp"
                android:textColor="@color/text_secondary"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
