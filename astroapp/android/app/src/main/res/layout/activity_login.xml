<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/brand_bg_soft"
    android:gravity="center"
    android:padding="24dp">

    <!-- Card Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_premium"
        android:orientation="vertical"
        android:padding="32dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/imgLoginLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/app_logo"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="உள்நுழைய"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Astro5Star க்கு மீண்டும் வரவேற்கிறோம்"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="மொபைல் எண்ணை உள்ளிடவும்"
            android:background="@drawable/bg_input_rounded"
            android:paddingHorizontal="16dp"
            android:inputType="phone"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:layout_marginBottom="24dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSendOtp"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="OTP பெறவும்"
            android:background="@drawable/bg_button_primary"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textAllCaps="false"/>

    </LinearLayout>

</LinearLayout>
