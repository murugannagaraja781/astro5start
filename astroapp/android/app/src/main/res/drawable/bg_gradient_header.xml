<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Purple 600 -> Pink 600 (#db2777) -> Blue 600 (#2563eb) -->
    <!-- Gradient only supports 3 colors max usually in XML standard, Design System asked for Horizontal -->
    <gradient
        android:angle="0"
        android:startColor="@color/purple_600"
        android:centerColor="#db2777"
        android:endColor="#2563eb"
        android:type="linear"/>
</shape>
