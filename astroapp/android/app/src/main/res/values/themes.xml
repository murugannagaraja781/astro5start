<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (Space & Purple) -->
    <style name="Theme.FCMCallApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_600</item>
        <item name="colorPrimaryVariant">@color/space_900</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/gold_500</item>
        <item name="colorSecondaryVariant">@color/gold_400</item>
        <item name="colorOnSecondary">@color/space_900</item>

        <item name="android:statusBarColor">@color/space_900</item>
        <item name="android:windowLightStatusBar">false</item> <!-- Dark status bar, light icons -->
        <item name="android:navigationBarColor">@color/surface_white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item> <!-- Dark nav icons on white bg -->

        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Full screen theme for incoming call -->
    <style name="Theme.FCMCallApp.FullScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_600</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/space_900</item>
        <item name="android:navigationBarColor">@color/space_900</item>
        <item name="android:windowBackground">@color/space_900</item>
    </style>

    <!-- DYNAMIC THEMES - Unified to Space & Purple System as per request -->
    <!-- Ideally, we might want to offer real choices again, but "use this update" implies uniformity first. -->

    <style name="Theme.FCMCallApp.Luxury" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Vedic" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Cosmic" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Solar" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Lunar" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Forest" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Ocean" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Royal" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Mystic" parent="Theme.FCMCallApp" />
    <style name="Theme.FCMCallApp.Midnight" parent="Theme.FCMCallApp" />

</resources>
