<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Rounded Cards (12-16dp) -->
    <style name="CardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Headers / Titles -->
    <style name="TextStyle.Header" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.SubHeader" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Input Fields (Light Mode Friendly) -->
    <style name="InputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_variant</item> <!-- Green Borders -->
        <item name="hintTextColor">@color/primary_variant</item>
        <item name="android:textColorHint">@color/text_muted</item>
        <item name="boxBackgroundColor">@color/surface</item> <!-- White Input Bg -->
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Primary Button (Green) -->
    <style name="ButtonStyle.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">12dp</item>
    </style>

</resources>
